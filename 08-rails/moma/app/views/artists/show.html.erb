<h1><%= @artist.name %></h1>
<%= image_tag @artist.image, :class => 'feature' %>
<ul>
  <li>Nationality: <%= @artist.nationality %></li>
  <li>Date of birth: <%= @artist.dob.strftime "%A %e %B, %Y" %></li>
  <li>Period: <%= @artist.period %></li>
</ul>

<div class="controls">
  <%= link_to "Edit artist", edit_artist_path(@artist) %>
  <%= link_to "Delete artist", @artist, :method => :delete, :data => {:confirm => 'Are you sure?'} %>
</div>
