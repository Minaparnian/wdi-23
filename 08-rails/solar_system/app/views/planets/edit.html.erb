<h1>Edit Planet</h1>

<form action="<%= planet_path(@planet.id) %>" method="post">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="<%= @planet.name %>" placeholder="Earth" required autofocus>

  <label for="image">Image:</label>
  <input type="url" id="image" name="image" value="<%= @planet.image %>" placeholder="http://...">

  <label for="orbit">Orbit:</label>
  <input type="number" id="orbit" name="orbit" value="<%= @planet.orbit %>" placeholder="1.3">

  <label for="diameter">Diameter:</label>
  <input type="number" id="diameter" name="diameter" value="<%= @planet.diameter %>" placeholder="123224">

  <label for="mass">Mass:</label>
  <input type="number" id="mass" name="mass" value="<%= @planet.mass %>" placeholder="12312312">

  <label for="moons">Moons:</label>
  <input type="number" id="moons" name="moons" value="<%= @planet.moons %>" placeholder="2">

  <button>Update planet</button>
</form>
