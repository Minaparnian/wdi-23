<h1>New Planet</h1>

<form action="/planets" method="post">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" placeholder="Earth" required autofocus>

  <label for="image">Image:</label>
  <input type="url" id="image" name="image" placeholder="http://...">

  <label for="orbit">Orbit:</label>
  <input type="number" id="orbit" name="orbit" placeholder="1.3">

  <label for="diameter">Diameter:</label>
  <input type="number" id="diameter" name="diameter" placeholder="123224">

  <label for="mass">Mass:</label>
  <input type="number" id="mass" name="mass" placeholder="12312312">

  <label for="moons">Moons:</label>
  <input type="number" id="moons" name="moons" placeholder="2">

  <button>Create planet</button>
</form>
